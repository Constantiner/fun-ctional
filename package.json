{
	"name": "@constantiner/fun-ctional",
	"version": "0.4.0",
	"description": "The library brings most of the familiar functional techniques (like functional composition) in asynchronous world with shining Promises",
	"main": "fun-ctional",
	"scripts": {
		"test": "npx jest",
		"lint": "npx eslint '**/*.js'",
		"build": "npx gulp",
		"format": "npx prettier 'src/*.js' --write",
		"prepublishOnly": "npm run lint && npm run test && npm run build",
		"clean": "npx gulp clean",
		"clear_jest": "npx jest --clearCache"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Constantiner/fun-ctional.git"
	},
	"keywords": [
		"JS",
		"JavaScript",
		"Functional",
		"FP",
		"Asynchronous",
		"Utility",
		"Utilities",
		"ES6",
		"Promise"
	],
	"author": "Konstantin Kovalev <constantiner@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Constantiner/fun-ctional/issues"
	},
	"homepage": "https://github.com/Constantiner/fun-ctional#readme",
	"jest": {
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/dist/",
			"/__tests__/test-utils/"
		],
		"coverageDirectory": "./coverage/",
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**",
			"!src/fun-ctional.js"
		]
	},
	"prettier": {
		"printWidth": 120,
		"useTabs": true,
		"tabWidth": 4
	},
	"engines": {
		"node": ">=7.6",
		"npm": ">=5.2.0"
	},
	"devDependencies": {
		"@types/jest": "^23.1.3",
		"babel-core": "^6.26.3",
		"babel-plugin-external-helpers": "^6.22.0",
		"babel-preset-env": "^1.7.0",
		"babel-preset-import-export": "^1.0.2",
		"del": "^3.0.0",
		"eslint": "^4.19.1",
		"eslint-config-prettier": "^2.9.0",
		"gulp": "^3.9.1",
		"gulp-babel": "^7.0.1",
		"gulp-better-rollup": "^3.3.0",
		"gulp-rename": "^1.3.0",
		"gulp-sourcemaps": "^2.6.4",
		"gulp-uglify": "^3.0.0",
		"jest": "^23.2.0",
		"prettier": "^1.13.7",
		"rollup-plugin-babel": "^3.0.7"
	},
	"dependencies": {}
}
